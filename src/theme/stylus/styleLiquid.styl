$color-1 = rgba(0, 0, 0, 0.22)
$color-2 = rgba(209, 209, 209, 0.5)
$color-3 = rgba(0, 0, 0, 0.13)

html.Rise-popup-opened
body.Rise-popup-opened
    overflow hidden !important
    width 100%

.Rise-popup
    position fixed
    top 20px
    bottom 20px
    left 20px
    right 20px
    width calc(100% - 40px)
    height calc(100% - 40px)
    margin auto
    overflow hidden
    box-shadow 0px 0px 80px 0px $color-1
    pointer-events none
    opacity 0
    transform scale(0)
    transform-origin bottom
    transition all 0.3s
    border-radius 10px
    z-index -999
    overflow-scrolling touch

    &.open
        z-index 2147483647
        pointer-events all
        opacity 1
        transform scale(1)

    .Rise-popup-close-button
        background-color unset
        background-image url(https://assets.rise-ai.com/static/3c5f3083e19b40e9a4b8750b4e292998a629107af12d4c4e9428093279dea76f.png)
        background-repeat no-repeat
        background-position center
        background-size 14px
        padding 16px
        border-radius 3px
        transition all 0.2s
        position fixed
        right 15px
        top 15px
        cursor pointer
        border 0
        outline none
        z-index 2147483647

        &.Rise-popup-close-button--light
            background-image url(https://assets.rise-ai.com/static/4b4ebf85a9424d43a6b0bd6ce2143d7d.png)

        &:hover
            background-color $color-2

    iframe
        border none
        outline 0
        height 100%
        width 100%
        display none
        overflow-y scroll
        overflow-scrolling touch

    &:not(.open)
        iframe
            display none !important

    .Rise-popup-spinner
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)

        >svg
            animation spinner 500ms linear infinite
            height 40px
            width 40px

@media (max-width: 460px)
    .Rise-popup
        top 0
        bottom 0
        left 0
        right 0
        width 100%
        height 100%
        max-width unset
        max-height unset
        border-radius 0

@media (min-width: 40em)
    .Rise-popup
        .Rise-popup-close-button
            background-size 18px
            padding 18px

@keyframes spinner
    to
        transform rotate(360deg)

.Rise-popup-backdrop
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    width 100%
    height 100%
    overflow hidden
    pointer-events none
    opacity 0
    transition all 0.3s
    z-index -999

    &.show
        z-index 2147483647
        pointer-events all
        opacity 1
        background $color-3
